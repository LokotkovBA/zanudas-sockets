{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess":true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["**/*/*.ts"],
  "exclude": ["node_modules", "build"]
}

